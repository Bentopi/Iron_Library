<h1>Edit Book Info</h1>

You are editing <%= @book.title %>
<%= form_for @book do |f|%>
<div class="form-group">
  <h2><%= f.label :title %></h2>
  <%= f.text_field :title, class:'form-control' %>
</div>
<div class="form-group">
<h2><%= f.label :photo_url %></h2>
<%= f.text_field :photo_url, class:'form-control'%>
</div>
<div class="form-group">
<h2><%= f.label :price %></h2>
<%= f.text_field :price, class:'form-control'%>
</div>
<div class="form-group">
  <h2><%= f.label :author %></h2>
  <%= f.collection_select :author_id, Author.all, :id, :full_name, {prompt: true}, class:'form-control' %>
</div>
<%= f.submit class:'btn btn-primary' %>
<% end %>
