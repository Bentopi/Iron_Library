<div class="container">
  <%= form_for @user, url:create_user_path do |f| %>
    <div class="">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="">
      <%= f.label "Retype Password" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="">
      <%= f.submit class:"btn btn-primary" %>
    </div>
    <% end %>
</div>
