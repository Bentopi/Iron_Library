<!DOCTYPE html>
<html>
<head>
  <title>The Iron Library</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="row">
        <div class="navbar-text">
        <h4><%= link_to "The Iron Library", root_path%></h4>
        </div>
        <div class="navbar-text">
          <h4><%= link_to "Authors", authors_path%></h4>
        </div>
        <div class="navbar-text">
          <h4><%= link_to "Books", books_path%></h4>
        </div>
        <div class="sign_in navbar-right">
            <h4><% if @current_user %>
            <div class="navbar-text">
              Signed in as <%= @current_user.username %>
              (<%= link_to "Sign Out", sign_in_path, method: :delete %>)
            </div></h4>
            <% else %>
                <%= link_to "Sign In", sign_in_path, class: "btn btn-primary navbar-btn" %></h4>
            <% end %>
          </div>
      </div>
    </div>
  </nav>

  <% if notice  %>
    <h3 class="text-center">
      <%= notice %>
    </h3>
  <% end %>
  <%= yield %>

</body>
</html>
