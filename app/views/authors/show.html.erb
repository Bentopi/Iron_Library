<div class="container">
  <h1> <%= @author.full_name %> </h1>
  <hr>
  <h3>Bio:</h3>
  <p>
  <%= @author.bio %>
  </p>
  <br>
  <h2>Books:</h2>
  <ul class="list-group">
  <% @author.books.each do |book| %>
  <li class="list-group-item"> <%= link_to book.title, book_path(id: book.id) %> </li>
  <% end %>
  </ul>
</div>
